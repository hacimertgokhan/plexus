{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://api.spotify.com" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$USERPROFILE/*"
        },
        {
          "path": "$HOME/*"
        },
        {
          "path": "$DOCUMENTS/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$USERPROFILE/*"
        },
        {
          "path": "$HOME/*"
        },
        {
          "path": "$DOCUMENTS/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$USERPROFILE/*"
        },
        {
          "path": "$HOME/*"
        },
        {
          "path": "$DOCUMENTS/*"
        }
      ]
    },
    "shell:default",
    "os:default",
    "http:default"
  ]
}